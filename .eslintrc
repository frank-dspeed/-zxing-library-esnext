{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    extends: ["eslint:recommended"],
    rules: {
        "no-console": "error",
        "curly": ["error", "all"],
        "prefer-arrow-callback": "error",
        "one-var": ["error", "never"],
        "no-var": "error",
        "prefer-const": "error",
        "semi": "error",
        "quotes": ["error", "single"]
    },
    "env": {
        "es6": true
    }
}
